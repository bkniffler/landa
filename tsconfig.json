{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "sourceRoot": "src",
    "outDir": "lib",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
